{
  "tasks":{
    "task 1": {
      "description": "I am the task 1, I echo Processus",
      "blocking": true,
      "handler": "../taskHandlers/shellHandler",
      "data": {
        "cmd": "echo Processus",
        "skip me": "true"
      }
    },
    "task 2": {
      "description": "I am the task 2, I will be skipped",
      "blocking": true,
      "skip_if":"$[tasks.task 1.data.skip me]",
      "handler": "../taskHandlers/shellHandler",
      "data": {
        "cmd": "echo Simple"
      }
    },
    "task 3": {
      "description": "I am the task 3, I will error",
      "blocking": true,
      "error_if": "$[tasks.task 2.skip_if]",
      "handler": "../taskHandlers/shellHandler",
      "data": {
        "cmd": "echo Workflow"
      }
    }
  }
}
